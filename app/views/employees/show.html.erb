<p>
  <strong>Name:</strong>
  <%= "#{@employee.fname} #{@employee.lname}" %>
</p>
<p>
  <strong>Avatar:</strong>
  <img src="<%= @employee.avatar %>" style="width: 60px; height: 60px;"/>
</p>
<p>
  <strong>Birthday:</strong>
  <%= @employee.birthday.strftime("%d/%m/%Y") %>
</p>
<p>
  <strong>Email:</strong>
  <%= @employee.email %>
</p>
<p>
  <strong>Role:</strong>
  <%= Employee.roles.key(@employee.role) %>
</p>

<% if policy(@employee).update? %>
  <%= link_to 'Edit', edit_organisation_employee_path(@employee.organisation,@employee) %> |
<% end %>
<%= link_to 'Back', organisation_path(@employee.organisation) %>

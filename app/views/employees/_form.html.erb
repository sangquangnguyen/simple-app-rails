<%= form_with model: [employee.organisation, employee] do |form|  %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :fname %>
    <%= form.text_field :fname %>
  </div>

  <div class="field">
    <%= form.label :lname %>
    <%= form.text_field :lname %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.text_area :avatar %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_field :birthday, as: :date, value: form.object.try(:strftime,"%d/%m/%Y") %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_area :email %>
  </div>

  <div>
    <%= form.label :role %>
    <%= form.select :role, @roles %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

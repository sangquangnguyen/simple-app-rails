<h1>Organisations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <% if policy(organisation).show? %>
        <tr>
          <td><%= organisation.name %></td>
          <td><img src="<%= organisation.logo %>" style="width: 60px; height: 60px;"/></td>
          <td><%= link_to 'Show', organisation %></td>
          <% if policy(organisation).update? %>
            <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
          <% end %>
          <% if policy(organisation).destroy? %>
            <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Organisation.new).create? %>
  <%= link_to 'New Organisation', new_organisation_path %>
<% end %>
